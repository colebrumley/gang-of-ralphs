{
  "name": "claude-squad",
  "version": "0.0.1",
  "description": "AI orchestration system that coordinates multiple Claude Code agents to implement software from specifications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "sq": "./bin/sq",
    "sq-mcp": "./dist/mcp/index.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colebrumley/claude-squad.git"
  },
  "bugs": {
    "url": "https://github.com/colebrumley/claude-squad/issues"
  },
  "homepage": "https://github.com/colebrumley/claude-squad#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc && cp src/db/schema.sql dist/db/",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/index.ts",
    "test": "tsx --test 'src/**/*.test.ts'",
    "test:prompts": "tsx scripts/test-prompts.ts",
    "eval": "tsx src/evals/index.ts",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.11",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
